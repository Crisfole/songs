include : [ modern1 ]

// pdf.showlayout: true

instrument.type : guitar

diagrams.show : none

// --- Custom slash-chord fixes ---
chords : [
    { name: "G/B",  frets: [ x 2 0 0 3 3 ] }
    { name: "D/F#", frets: [ 2 x 0 2 3 2 ] }
    { name: "Dm/F", frets: [ x x 3 2 3 1 ] }
    { name: "Dm/G", frets: [ 3 x 3 2 3 1 ] }
    { name: "Bm/E", frets: [ 0 2 4 4 3 2 ] }
    { name: "Bm/D", frets: [ x 5 4 4 3 2 ] }
    { name: "E/G#", frets: [ 4 x 2 4 0 0 ] }
]

pdf.fontdir : [ "./config/fonts" ]

// "fontconfig" maps members of font families to font files.
pdf.fontconfig {
    "sans, sans-serif" {
        ""         : Poppins-ExtraLight.ttf
        bold       : Poppins-Medium.ttf
        bolditalic : Poppins-MediumItalic.ttf
        italic     : Poppins-ExtraLightItalic.ttf
    }
}

pdf.formats.title.subtitle : [ "", "", "%{capo|Capo: %{}}" ]

contents : [
  {
    fields   : [ songindex ]
    label    : "Table of Contents"
    line     : "%{title}"
    pageno   : "%{page}"
    omit     : false
    template : stdtoc
  }
]
pdf.songbook.align-songs : false

pdf.labels.comment: comment_italic

pdf.chorus.recall.quote : true
pdf.chorus.bar.width : 0
pdf.chorus.indent : 0

pdf.spacing.title   : 1.5
pdf.spacing.lyrics  : 1.7
pdf.spacing.chords  : 1.1
pdf.spacing.empty   : 0.6

pdf.fonts.text : "sans 10"
pdf.fonts.chord : "sans bold 9"
pdf.fonts.comment_italic.size : 8
pdf.fonts.comment_italic.color : "gray40"